{
  "name": "simpledevserver",
  "version": "1.0.0",
  "description": "Simple Alt:V Development Server",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && parseToml && .\\altv-server.exe",
    "start:dev": "npm run build && .\\altv-server.exe --config .\\server.dev.toml",
    "build": "npm run init && npm run clean && tsc && npm run uglify",
    "init": "npx altv-pkg release",
    "clean": "rimraf --glob resources/**/dist/*",
    "uglify": "uglifyjs-folder ./resources/**/dist -e -x .js -o .resources/**/dist",
    "parseToml": "node tomlParser.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ExXTreMe315/simpleDevServer.git"
  },
  "keywords": [
    "alt:v"
  ],
  "author": "ExXTreMe315",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/ExXTreMe315/simpleDevServer/issues"
  },
  "homepage": "https://github.com/ExXTreMe315/simpleDevServer#readme",
  "devDependencies": {
    "@altv/types-client": "^16.2.7",
    "@altv/types-natives": "^16.2.1",
    "@altv/types-server": "^16.2.5",
    "@altv/types-shared": "^16.2.4",
    "@altv/types-webview": "^16.2.1",
    "copyfiles": "^2.4.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "uglifyjs-folder": "^3.3.0"
  }
}
